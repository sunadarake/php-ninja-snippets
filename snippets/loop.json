{
    "Foreach loop": {
        "prefix": "fora",
        "body": [
            "foreach (\\$${1:items} as \\$${2:item}) {",
            "\t${0:# code...}",
            "}"
        ],
        "description": "Foreach as $item block"
    },
    "Foreach ... key ... item": {
        "prefix": "forh",
        "body": [
            "foreach (\\$${1:items} as \\$${2:key} => \\$${3:item}) {",
            "\t${0:# code...}",
            "}"
        ],
        "description": "Foreach as $key => $item block"
    },
    "For loop": {
        "prefix": "for",
        "body": [
            "for (\\$${1:i} = ${2:0}; \\$${1:i} < \\$${3:limit}; \\$${1:i}++) {",
            "\t${0:# code...}",
            "}"
        ],
        "description": "For loop"
    },
    "While loop": {
        "prefix": "wl",
        "body": [
            "while (\\$${1:var} ${2:<=} \\$${3:limit}) {",
            "\t${0:# code...}",
            "}"
        ],
        "description": "While loop"
    },
    "Do ... while": {
        "prefix": "dowl",
        "body": [
            "do {",
            "\t${0:# code...}",
            "} while (\\$${1:var} ${2:<=} \\$${3:limit});"
        ],
        "description": "Do while loop"
    }
}